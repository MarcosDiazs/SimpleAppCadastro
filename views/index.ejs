<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
  <link rel="stylesheet" href="stylesheets/style.css">
  <link rel="stylesheet" href="components/angular-material/angular-material.css">
  <!--   icon fonts   -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body ng-app="cadastroApp" ng-cloak>

  <div id="back">
    <div class="card-container">
      <div ng-controller="cadastroCtrl" layout="column" style="500px;">
        <section layout="row" flex>
          <md-sidenav
            class="md-sidenav-left left-siderbar"
            md-component-id="left"
            md-is-locked-open="$mdMedia('gt-md')"
            md-whiteframe="2">

          <md-toolbar class="md-theme-indigo">
            <h1 class="md-toolbar-tools">Cadastro</h1>
          </md-toolbar>
          <md-content layout-padding>
            <div layout="column" class="md-inline-form">
              <md-content layout-padding>
                <div>
                  <md-input-container class="md-block" flex-gt-xs>
                    <label>nome</label>
                    <input type="text" ng-model="novoAluno.nome">
                  </md-input-container>
                  <md-input-container class="md-block">
                    <label>matricula</label>
                    <input ng-model="novoAluno.matricula"></input>
                  </md-input-container>
                  <md-input-container class="md-block">
                    <label>e-mail</label>
                    <input type="email" ng-model="novoAluno.email">
                  </md-input-container>
                  <md-input-container>
                    <label>data de nascimento</label>
                    <md-datepicker ng-model="novoAluno.idade"></md-datepicker>
                  </md-input-container>
                  <md-input-container class="md-block" flex-gt-sm>
                    <label>sexo</label>
                    <md-select ng-model="aluno.sexo">
                      <md-option ng-repeat="sexo in sexos" value="{{sexo.abbrev}}">
                        {{sexo.abbrev}}
                      </md-option>
                    </md-select>
                  </md-input-container>
                  <div>
                    <md-button ng-click="addAluno()">Cadastrar</md-button>
                  </div>
                </div>
              </md-content>
            </div>
          </md-content>

        </md-sidenav>

        <md-content flex>

          <md-toolbar class="md-hue-2">
            <div class="md-toolbar-tools">
              <h2 layout-padding>
                <span>Alunos Cadastrados</span>
              </h2>
              <div>
                <form>
                  <md-autocomplete
                    ng-model="busca"
                    ng-disable="ctrl.isDisable"
                    md-no-cashe="ctrl.noCashe"
                    md-selected-item="ctrl.selectedItem"
                    md-search-text-change="ctrl.searchTextChange(ctrl.searchText)"
                    md-search-text="ctrl.searchText"
                    md-selected-item-change="ctrl.selectedItemChange(item)"
                    md-items="item in ctrl.querySearch(ctrl.searchText)"
                    md-item-text="item.display"
                    md-min-length="0"
                    placeholder="Buscar">
                    <md-item-template>
                      <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                    </md-item-template>
                    <md-not-found>
                        Nenhum resultado para "{{ctrl.searchText}}" foi encontrado.
                    </md-not-found>
                  </md-autocomplete>
                </form>
              </div>
            </div>
          </md-toolbar>

          <md-content flex layout-padding>

            <md-list class="md-dense" flex>
              <md-subheader class="md-no-sticky">
                Alunos
              </md-subheader>

              <md-list-item class="md-3-line" ng-repeat="aluno in alunos| orderBy:[nome] |filter:busca">
                <img ng-src="{{aluno.face}}?{{$index}}" class="md-avatar" alt="{{aluno.nome}}">
                <div class="md-list-item-text" layout="column">
                  <h3>{{aluno.nome}}</h3>
                  <h5>{{aluno.matricula}}</h5>
                  <h3>{{aluno.email}}</h3>
                </div>
                <md-icon class="md-secondary" ng-click="">
                  <i class="material-icons">delete</i>
                </md-icon>
              </md-list-item>

              <md-divider></md-divider>
            </md-list>

          </md-content>

        </md-content>
        </section>
      </div>
    </div>
  </div>

  <!--   Scripts   -->
  <script src="components/angular/angular.js" charset="utf-8"></script>
  <!--   scripts adcionais   -->
  <script src="components/angular-animate/angular-animate.js" charset="utf-8"></script>
  <script src="components/angular-aria/angular-aria.js" charset="utf-8"></script>
  <script src="components/angular-messages/angular-messages.js" charset="utf-8"></script>
  <!--   angular-material script   -->
  <script src="components/angular-material/angular-material.js" charset="utf-8"></script>
  <!--   meus scripts   -->
  <script src="javascripts/controller.js" charset="utf-8"></script>
  <!--   Scripts   -->
</body>
</html>
